<body>
  <h1><strong>Books</strong></h1>
  <table>
  	<thead>
      <tr>
　　    <th><strong>Title</strong></th>
　　    <th><strong>Body</strong></th>
        <th colspan="3"></th>
　    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
　    <tr>
　　    <td><%= book.title %></td>
　　    <td class="tdbody"><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %> <%= link_to "Edit", edit_book_path(book) %> <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
</table>
<br>
<h1><strong>New book</strong></h1><br>

<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
	  <div class="error_explanation">
		<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
		<ul><% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	    </ul>
	  </div>
	<% end %>
  <h4><strong>Title</strong></h4>
  <%= f.text_field :title %>

  <h4><strong>body</strong></h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>

</body>
<% end %>